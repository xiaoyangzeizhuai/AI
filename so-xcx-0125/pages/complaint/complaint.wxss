/* pages/complaint/complaint.wxss */
page {
  background: #f4f4f4;
}
.complaint-gray {
  color: #ccc;
}
.complaint .complaint-content {
  position: relative;
}
.complaint .complaint-content textarea {
  width: 92%;
  height: 445rpx;
  margin: 15rpx 0 30rpx;
  padding: 4%;
  background: #fff;
  font-size: 30rpx;
  color: #666;
}
.complaint .complaint-button {
  width: 690rpx;
  margin: 0 auto;
}
.complaint .complaint-button button {
  width: 100%;
  height: 90rpx;
  background: #188bfe;
  font-size: 36rpx;
  color: #fff;
}
.complaint .complaint-button button::after {
  border: 0;
} 
.number-limit {
  position: absolute;
  bottom: 4%;
  right: 4%; 
  font-size: 24rpx;
  color: #ccc;
}