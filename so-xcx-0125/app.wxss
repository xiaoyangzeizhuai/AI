/**app.wxss**/

/* 利好：red-bg  利空：green-bg   一般:black-bg */

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

view, scroll-view, swiper, text, input, button, label, navigator {
    box-sizing: border-box;
}

.red-txt {
    color: #ff4c4c;
}

.green-txt {
    color: #21ac59;
}

.gray-txt {
    color: #a6a6a6;
}

.red-bg {
    background: #ff4c4c;
}

.green-bg {
    background: #21ac59;
}

.black-bg {
    background: #a6a6a6;
}

.red-bg, .green-bg, .gray-bg, .black-bg {
    display: inline-block;
    border-radius: 5rpx;
    padding: 0 12rpx;
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #fff;
}

.gray-bg {
    background: #ececec;
    color: #999;
}

.box3-con {
    margin-bottom: 60rpx;
}

.hot-ticai-tp {
    display: flex;
    margin: 0 0 30rpx 0;
}

.hot-ticai-lt {
    display: flex;
}

.hot-ticai-lt::after {
    display: inline-block;
    content: '';
    border-left: 1px solid #eee;
}

.hot-icon {
    position: relative;
}

.hot-icon image {
    display: block;
    width: 22rpx;
    height: 35rpx;
}

.hot-icon text {
    position: absolute;
    display: block;
    width: 22rpx;
    top: 2rpx;
    left: 0;
    font-size: 18rpx;
    color: #fff;
    z-index: 1;
    text-align: center;
}

.hot-name {
    width: 226rpx;
    margin: 0 0 0 36rpx;
}

.hot-name text, .hot-ticai-rt text {
    display: block;
}

.hot-name .hot-name-txt {
    margin-bottom: 10rpx;
    font-size: 22rpx;
    color: #999;
}

.hot-name .hot-name-price {
    font-size: 48rpx;
}

.hot-ticai-rt {
    padding: 0 0 0 26rpx;
}

.hot-ticai-rt text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 6rpx;
    font-size: 24rpx;
    color: #999;
}

.hot-ticai-rt .txt1 {
    font-size: 30rpx;
    color: #333;
}

.hot-ticai-bot {
    position: relative;
    display: flex;
    align-items: center;
    height: 62rpx;
    line-height: 62rpx;
    margin-top: 10rpx;
}

.hot-ticai-bot .bot {
    width: 50%;
    background: #fafafa;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.bot-line {
    position: absolute;
    left: 50%;
    top: 24rpx;
    width: 1px;
    height: 18rpx;
    background: #ccc;
    z-index: 1;
}

.bot image {
    width: 12rpx;
    height: 18rpx;
    margin-left: 10rpx;
}

.hot-news-con {
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #333;
}

.hot-news-con text {
    line-height: 1.6;
}
.hot-news-tit{
     /* display: block;  */
    /* width: 650rpx; */
    /* white-space: nowrap;  */
     display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;    
    overflow: hidden;
}
.hot-news-p{
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;  
    color: #999;
    word-break: break-all;
}

.view-box4-con .hot-icon {
    position: relative;
    top: 12rpx;
}

.view-box4-con .box3-con {
    margin-bottom: 45rpx;
}

.sen-state{
    display: flex;
}
.sen-state text{
    display: block;
    min-width: 66rpx;
    padding: 0;
    margin: 0 10rpx 10rpx 0;
    text-align: center;
}

.iden-1, .iden-2 {
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 14rpx;
    border-radius: 5rpx;
    font-size: 20rpx;
    color: #fff;
}

.iden-1 {
    background: #24c3fe;
}

.iden-2 {
    background: #ffa65a;
}

cover-view{
    overflow: visible;
    white-space: normal;
}